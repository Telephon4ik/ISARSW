<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.isarsw.controller.MainController"
            fx:id="mainPane"
            styleClass="main-window">

    <top>
        <ToolBar styleClass="tool-bar">
            <!-- Логотип и название приложения -->
            <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="10">
                <!-- Логотип -->
                <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                    <Image url="@../images/logo.png"/>
                </ImageView>

                <!-- Название приложения -->
                <VBox spacing="2">
                    <Label text="ЖД Диспетчер" styleClass="logo-title"/>
                    <Label text="Управление поездами" styleClass="logo-subtitle"/>
                </VBox>
            </HBox>

            <Separator orientation="VERTICAL"/>

            <!-- Основные кнопки -->
            <Button text="Новый поезд" onAction="#onCreateFlight" styleClass="button-primary"/>
            <Button text="Обновить" onAction="#onRefresh" styleClass="button"/>

            <Separator orientation="VERTICAL"/>

            <!-- Поиск -->
            <Label text="Поиск:" styleClass="toolbar-label"/>
            <TextField fx:id="searchField" promptText="Номер, маршрут или платформа..."
                       onKeyReleased="#onSearch" prefWidth="300" styleClass="toolbar-textfield"/>

            <Separator orientation="VERTICAL"/>

            <Button text="Фильтры" onAction="#onFilters" styleClass="button"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Заголовок -->
            <Label text="Расписание поездов"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <!-- Таблица поездов -->
            <TableView fx:id="flightsTable" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colId" text="№" prefWidth="50"/>
                    <TableColumn fx:id="colNumber" text="Номер поезда" prefWidth="140"/>
                    <TableColumn fx:id="colRoute" text="Маршрут" prefWidth="250"/>
                    <TableColumn fx:id="colPlatform" text="Платформа" prefWidth="100"/>
                    <TableColumn fx:id="colArrive" text="Прибытие" prefWidth="160"/>
                    <TableColumn fx:id="colStandingTime" text="Стоянка (мин)" prefWidth="110"/>
                    <TableColumn fx:id="colDeparture" text="Отправление" prefWidth="160"/>
                    <TableColumn fx:id="colStatus" text="Статус" prefWidth="140"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="bottom-panel">
            <padding>
                <Insets top="12" right="20" bottom="12" left="20"/>
            </padding>
            <Label text="Действия:" style="-fx-font-weight: bold; -fx-text-fill: #ecf0f1;"/>
            <Button text="Редактировать" onAction="#onEdit" styleClass="bottom-button"/>
            <Button text="Удалить" onAction="#onDelete" styleClass="bottom-button"/>
            <Button text="История" onAction="#onHistory" styleClass="bottom-button"/>

            <Separator orientation="VERTICAL" prefHeight="24"/>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Показано поездов:" style="-fx-text-fill: #bdc3c7;"/>
                <Label fx:id="lblStatus" text="0" styleClass="status-counter"/>
            </HBox>
        </HBox>
    </bottom>

</BorderPane>